test "header size" {
    // Tar header is 512 bytes, name at offset 0 (100 bytes)
    var header_size = 512
    var name_offset = 0
    var name_len = 100
    var size_offset = 124
    var size_len = 12
    assert_eq(header_size, 512)
}

test "name field" {
    // Tar header is 512 bytes, name at offset 0 (100 bytes)
    var header_size = 512
    var name_offset = 0
    var name_len = 100
    var size_offset = 124
    var size_len = 12
    assert_eq(name_offset + name_len, 100)
}

test "size field" {
    // Tar header is 512 bytes, name at offset 0 (100 bytes)
    var header_size = 512
    var name_offset = 0
    var name_len = 100
    var size_offset = 124
    var size_len = 12
    assert_eq(size_offset + size_len, 136)
}
